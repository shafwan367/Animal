<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/background" />
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Hello guys,\nwe made this app \nto learn about \nanimal"
                android:textColor="@color/white"
                android:textSize="72px"
                android:textStyle="bold"
                app:layout_editor_absoluteX="62.13px"
                app:layout_editor_absoluteY="320.88px"
                tools:ignore="MissingConstraints"/>
            <Button
                android:layout_marginTop="120dp"
                android:id="@+id/btn_go"
                android:layout_width="554px"
                android:layout_height="104.69px"
                android:alpha="0.80"
                android:background="@drawable/rectangle_btn_bg"
                android:text="Lets go"
                android:textColor="@color/white"
                android:textSize="36px"
                android:textStyle="bold"
                tools:ignore="MissingConstraints" />
    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>